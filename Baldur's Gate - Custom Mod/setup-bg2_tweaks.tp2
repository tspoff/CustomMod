INCLUDE ~bg2_tweaks/lib/common_armor_list.tpa~ // common armor types

ACTION_PHP_EACH cd_armor AS item => type BEGIN

  ACTION_IF (((type = 130) OR (type = 203) OR (type = 303) OR (type = 330)) AND (FILE_EXISTS_IN_GAME "%item%.itm")) BEGIN // chain mail

    COPY_EXISTING ~%item%.itm~ ~override~
      READ_ASCII 0x44 icon ELSE 0
      PATCH_IF (("%icon%" STRING_COMPARE_CASE "gchan01" = 0) OR
                ("%icon%" STRING_COMPARE_CASE "_gchan01" = 0)) BEGIN
        WRITE_ASCII 0x44 ~cdgchan~ #8
      END
      BUT_ONLY

  END

  ACTION_IF ((type = 304) AND (FILE_EXISTS_IN_GAME "%item%.itm")) BEGIN // elven chain

    COPY_EXISTING ~%item%.itm~ ~override~
      READ_ASCII 0x44 icon ELSE 0
      PATCH_IF (("%icon%" STRING_COMPARE_CASE "gchan01" = 0) OR
                ("%icon%" STRING_COMPARE_CASE "_gchan01" = 0)) BEGIN
        WRITE_ASCII 0x44 ~cdgelchn~
      END
      BUT_ONLY

