ACTION_CLEAR_ARRAY cd_armor
INCLUDE ~bg2_tweaks/lib/thieving_descripts.tpa~ // text replacement macroes
INCLUDE ~bg2_tweaks/lib/common_armor_list.tpa~  // common armor types needed for both components
INCLUDE ~bg2_tweaks/lib/thieving_to_50.tpa~     // extend bard, ranger pickpocketing to 200 and levels to 50

// to get unarmored bonuses to work, bonuses are added in the race bonus tables
// all non-robe armor offsets these
COPY_EXISTING ~skillrac.2da~ ~override~
  COUNT_2DA_ROWS 8 rows
  FOR (index = 0 ; index < rows ; ++index) BEGIN
    READ_2DA_ENTRY index 1 8 val
    SET_2DA_ENTRY  index 1 8 (val + 5) // pickpocket
    READ_2DA_ENTRY index 4 8 val
    SET_2DA_ENTRY  index 4 8 (val + 10) // move silently
    READ_2DA_ENTRY index 5 8 val
    SET_2DA_ENTRY  index 5 8 (val + 5) // HiS
  END
  BUT_ONLY
  
ACTION_PHP_EACH cd_armor AS item => type BEGIN

  ACTION_IF ((type > 104) AND (FILE_EXISTS_IN_GAME ~%item%.itm~)) BEGIN // ignore shields
  
    ACTION_IF ((type < 201) OR (type = 300) OR (type = 400)) BEGIN // leather, other misc armors that only need to offset unarmored bonuses

      // for leather or padded, add penalties to offset unarmored bonuses from race table
      COPY_EXISTING ~%item%.itm~ ~override~
        READ_SHORT 0x1c sanity_check
        PATCH_IF sanity_check = 2 BEGIN
          LPF ADD_ITEM_EQEFFECT INT_VAR opcode = 275 target = 1 parameter1 =  "-5" timing = 2 END // HiS
          LPF ADD_ITEM_EQEFFECT INT_VAR opcode =  92 target = 1 parameter1 =  "-5" timing = 2 END // pickpocketing
          LPF ADD_ITEM_EQEFFECT INT_VAR opcode =  59 target = 1 parameter1 = "-10" timing = 2 END // move silently
        END
        BUT_ONLY 

    END ELSE BEGIN

      COPY_EXISTING ~%item%.itm~ ~override~
        READ_SHORT 0x1c sanity_check
        PATCH_IF sanity_check = 2 BEGIN
          SET patch_hide = 0
          PATCH_IF ((type = 201) OR (type = 210) OR (type = 211) OR (type = 212) OR
                    (type = 214) OR (type = 301) OR (type = 310)) BEGIN // studded leather
            SET penalty_hide = 20
            SET penalty_pickpocket = 30
            SET penalty_lock = 10
            SET penalty_trap = 10
            SET penalty_silent = 20
          END ELSE
          PATCH_IF (type = 215) BEGIN // studded leather, gets an extra -15 to move silently (squeaky leather from bgee)
            SET penalty_hide = 20
            SET penalty_pickpocket = 30
            SET penalty_lock = 10
            SET penalty_trap = 10
            SET penalty_silent = 35
          END ELSE
          PATCH_IF ((type = 202) OR (type = 302)) BEGIN // hide
            SET penalty_hide = 20
            SET penalty_pickpocket = 60
            SET penalty_lock = 50
            SET penalty_trap = 50
            SET penalty_silent = 30
          END ELSE
          PATCH_IF ((type = 203) OR (type = 303) OR (type = 330)) BEGIN // chain mail
            SET penalty_hide = 30
            SET penalty_pickpocket = 40
            SET penalty_lock = 15
            SET penalty_trap = 15
            SET penalty_silent = 40
          END ELSE
          PATCH_IF ((type = 204) OR (type = 304)) BEGIN // elven chain mail
            SET penalty_hide = 10
            SET penalty_pickpocket = 20
            SET penalty_lock = 5
            SET penalty_trap = 5
            SET penalty_silent = 10
          END
          PATCH_IF ((type = 205) OR (type = 305)) BEGIN // scale mail
            SET penalty_hide = 50
            SET penalty_pickpocket = 50
            SET penalty_lock = 20
            SET penalty_trap = 20
            SET penalty_silent = 60
          END ELSE
          PATCH_IF ((type = 206) OR (type = 207) OR (type = 306) OR (type = 307)) BEGIN // splint, banded mail
            SET penalty_hide = 30
            SET penalty_pickpocket = 40
            SET penalty_lock = 15
            SET penalty_trap = 25
            SET penalty_silent = 40
          END ELSE
          PATCH_IF ((type = 208) OR (type = 308)) BEGIN // plate mail
            SET penalty_hide = 75
            SET penalty_pickpocket = 75
            SET penalty_lock = 40
            SET penalty_trap = 40
            SET penalty_silent = 80
          END ELSE
          PATCH_IF ((type = 209) OR (type = 309)) BEGIN // full plate
            SET penalty_hide = 95
            SET penalty_pickpocket = 95
            SET penalty_lock = 80
            SET penalty_trap = 80
            SET penalty_silent = 95
          END ELSE
          PATCH_IF (type = 213) BEGIN // studded leather, use regular penalties plus an extra 25%
            SET penalty_hide = 45
            SET penalty_pickpocket = 55
            SET penalty_lock = 35
            SET penalty_trap = 35
            SET penalty_silent = 45
          END
          PATCH_IF ((type = 211) OR (type = 212) OR (type = 310) OR (type = 330)) BEGIN // armor that shouln't get HiS changes
            SET penalty_hide = 255
          END
  //        PATCH_IF (type = 0) BEGIN // armor that shouln't get pickpocket changes
  //          SET penalty_pickpocket = 255
  //        END
          PATCH_IF ((type = 212) OR (type = 214)) BEGIN // armor that shouln't get open locks changes
            SET penalty_lock = 255
          END
          PATCH_IF (type = 214) BEGIN // armor that shouln't get find traps changes
            SET penalty_trap = 255
          END
          PATCH_IF (type = 210) BEGIN // armor that shouln't get MS changes
            SET penalty_silent = 255
          END
          LPF DELETE_ITEM_EQEFFECT INT_VAR opcode_to_delete = 144 END // delete disable thieving buttons
          PATCH_IF (penalty_hide != 255) BEGIN
            LPF DELETE_ITEM_EQEFFECT INT_VAR opcode_to_delete = 275 END
            LPF ADD_ITEM_EQEFFECT INT_VAR opcode = 275 target = 1 parameter1 = (0 - penalty_hide - 5) timing = 2 END // extra 5 to offset unarmored bonus
          END ELSE BEGIN
            LPF ADD_ITEM_EQEFFECT INT_VAR opcode = 275 target = 1 parameter1 = "-5"                   timing = 2 END // extra 5 to offset unarmored bonus
          END
          PATCH_IF (penalty_pickpocket != 255) BEGIN
            LPF DELETE_ITEM_EQEFFECT INT_VAR opcode_to_delete = 92 END
            LPF ADD_ITEM_EQEFFECT INT_VAR opcode = 92 target = 1 parameter1 = (0 - penalty_pickpocket - 5) timing = 2 END // extra 5 to offset unarmored bonus
          END ELSE BEGIN
            LPF ADD_ITEM_EQEFFECT INT_VAR opcode = 92 target = 1 parameter1 = "-5"                         timing = 2 END // extra 5 to offset unarmored bonus
          END
          PATCH_IF (penalty_trap != 255) BEGIN
            LPF DELETE_ITEM_EQEFFECT INT_VAR opcode_to_delete = 91 END
            LPF ADD_ITEM_EQEFFECT INT_VAR opcode = 91  target = 1 parameter1 = (0 - penalty_trap)           timing = 2 END
          END
          PATCH_IF (penalty_lock != 255) BEGIN
            LPF DELETE_ITEM_EQEFFECT INT_VAR opcode_to_delete = 90 END
            LPF ADD_ITEM_EQEFFECT INT_VAR opcode = 90  target = 1 parameter1 = (0 - penalty_lock)           timing = 2 END
          END
          PATCH_IF (penalty_silent != 255) BEGIN
            LPF DELETE_ITEM_EQEFFECT INT_VAR opcode_to_delete = 59 END
            LPF ADD_ITEM_EQEFFECT INT_VAR opcode = 59  target = 1 parameter1 = (0 - penalty_silent - 10)    timing = 2 END // extra 10 to offset unarmored bonus
          END ELSE BEGIN
            LPF ADD_ITEM_EQEFFECT INT_VAR opcode = 59 target = 1 parameter1 = "-10"                         timing = 2 END // extra 10 to offset unarmored bonus
          END
          // adjust descriptions
          PATCH_FOR_EACH offset IN 0x50 0x54 BEGIN
            READ_LONG ~%offset%~ desc_strref
            PATCH_IF (desc_strref >= 0 && desc_strref < 2147483646) BEGIN
              READ_STRREF ~%offset%~ desc
              INNER_PATCH_SAVE desc ~%desc%~ BEGIN
                LAUNCH_PATCH_MACRO ~thieving_descripts~
              END
              SAY_EVALUATED ~%offset%~ ~%desc%~ // write changes
            END
          END
        END
        BUT_ONLY

    END

  END
  
END

