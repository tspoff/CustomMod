    COPY_EXISTING ~%item%.itm~ ~override~
      READ_ASCII 0x44 icon ELSE 0
      PATCH_IF (("%icon%" STRING_COMPARE_CASE "gleat01" = 0) OR
                ("%icon%" STRING_COMPARE_CASE "_gleat01" = 0)) BEGIN
        WRITE_ASCII 0x44 ~cdgleat~ #8
